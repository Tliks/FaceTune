/* Facial Shape UI Styles */
#root {
    flex-direction: row;
}

#left-panel {
    flex: 1 1 65%;
    flex-direction: column;
}

#general-controls-container {
    flex: 0 0 auto;
}

#selected-content-container {
    flex: 1 1 auto;
}

#right-panel {
    flex: 1 1 35%;
    flex-direction: column;
}

#border-line {
    height: 1px;
    background-color: rgba(128, 128, 128, 0.8);
    margin-top: 10px;
    margin-bottom: 5px;
}